{{ define "base" }}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{{ block "title" . }}Home{{ end }} | RepoInfo</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;0,1000;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900;1,1000&display=swap" rel="stylesheet">
	<script src="/static/js/htmx.min.js"></script>
    </head>
    <body>
	<div class="container my-3">
	    <form hx-get="/" hx-target="#repositories" hx-swap="outerHTML" id="form" hx-push-url="true">
		<div class="row justify-content-md-center">
		    <div class="col-md-10">
			<div class="input-group mb-3">
			    <input type="text" required class="form-control"
				placeholder="Search for repositories..."
				name="q" value="{{ .Query }}"
			    >
			    <button class="btn btn-outline-secondary" type="submit">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
				    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
				</svg>
				Search
			    </button>
			</div>
		    </div>
		</div>

		<div class="row justify-content-md-center">
		    <div class="col-md-10">
			<div class="d-flex">
			    <div class="me-4">
				<select class="form-select form-select-sm" aria-label="Select Programming Language" id="lang-select" name="lang">
				    <option value="">Select Programming Language</option>
				    {{ range $opt, $val := .LanguageOptions }}
					<option value="{{ $opt }}" {{ if eq $.SelectedLang $opt }}selected="selected"{{ end }}>
					    {{ $val }}
					</option>
				    {{ end }}
				</select>
			    </div>

			    <div class="me-2">
				<select class="form-select form-select-sm" aria-label="Select sort criteria" id="sort-select" name="sort">
				    <option value="">Sort By</option>
				    {{ range $opt, $val := .SortOptions }}
					<option value="{{ $opt }}" {{ if eq $.SelectedSort $opt }}selected="selected"{{ end }}>
					    {{ $val }}
					</option>
				    {{ end }}
				</select>
			    </div>
			</div>
		    </div>
		</div>
	    </form>
	    {{ template "body" . }}
	</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script>
	document.getElementById("form").addEventListener("submit", (event) => {
	    event.preventDefault();
	});
    </script>
    </body>
</html>
{{ end }}
